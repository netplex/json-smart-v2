        <name>Chemouni Uriel</name>
        <url>https://urielch.github.io/</url>
    </organization>
    <developers>
        <developer>
            <id>uriel</id>
            <name>Uriel Chemouni</name>
            <email>uchemouni@gmail.com</email>
            <timezone>GMT+1</timezone>
